{
    "name": "newsboard",
    "version": "0.0.1",
    "main": "main.ts",
    "repository": "https://github.com/nexryai/NewsBoard",
    "author": "nexryai <nexryai@sda1.net>",
    "license": "MIT",
    "private": true,
    "type": "module",
    "scripts": {
        "build:install": "cd client && yarn install --network-timeout 600000 && cd .. && yarn install --network-timeout 600000 && npx prisma generate",
        "build:compile": "cd client && yarn build && cd .. && tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "runtime:install": "yarn install --prod --frozen-lockfile",
        "start": "node --env-file=.env built/main.js",
        "docker:start": "npx prisma migrate deploy && node built/main.js",
        "ci:lint": "eslint && cd client && eslint"
    },
    "devDependencies": {
        "@types/node": "^22.4.1",
        "@types/sanitize-html": "^2.13.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.17.0",
        "eslint": "^9.10.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.3.3",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.6.2"
    },
    "dependencies": {
        "@fastify/middie": "^8.3.1",
        "@fastify/oauth2": "^7.9.0",
        "@fastify/secure-session": "^7.5.1",
        "@fastify/static": "^7.0.4",
        "@prisma/client": "^5.19.0",
        "fastify": "^4.28.1",
        "globals": "^15.9.0",
        "prisma": "^5.19.1",
        "reflect-metadata": "^0.2.2",
        "sanitize-html": "^2.13.0"
    }
}
